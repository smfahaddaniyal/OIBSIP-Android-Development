<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7AEAEA"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/meterInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:hint="Enter Value in Metres"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textColor="#2B41BA"
        android:textColorHint="#A3131DDD"
        tools:ignore="HardcodedText,VisualLintTextFieldSize,TextContrastCheck" />

    <Button
        android:id="@+id/convertToCmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9C27B0"
        android:text="@string/convert_to_centimeters"
        android:textColor="#000000"
        tools:ignore="VisualLintButtonSize,TextContrastCheck" />

    <Button
        android:id="@+id/convertToKmButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/convert_to_kilometers"
        android:textColor="#000000"
        tools:ignore="VisualLintButtonSize,TextContrastCheck" />

    <Button
        android:id="@+id/convertToFtButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/convert_to_feet"
        android:textColor="#000000"
        tools:ignore="VisualLintButtonSize,TextContrastCheck" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
